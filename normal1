import easy

while True:
    action = int(input('''
    Выберите действие:
    1. Перейти в папку
    2. Просмотреть содержимое текущей папки
    3. Создать папку
    4. Удалить папку
    5. Завершить программу
    '''))

    print('')
    if action == 1:
        easy.choose_dir()
    elif action == 2:
        easy.look_dir()
    elif action == 3:
        easy.create_dir()
    elif action == 4:
        easy.del_dir()
    elif action == 5:
        break
